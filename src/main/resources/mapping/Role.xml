<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="rml.dao.LessonMapper" >
    <resultMap id="BaseResultMap" type="rml.model.Resource" >
        <id column="id" property="id"  />
        <result column="name" property="name"  />
        <result column="remark" property="remark"  />
        <result column="seq" property="seq"  />
    </resultMap>
    <sql id="Base_Column_List">
        id,name,remark,seq
    </sql>

    <insert id="insert">
        INSERT  INTO tb_role(
        id,
        name,
        remark,
        seq
        )VALUES (
        #{id},
        #{name},
        #{remark},
        #{seq}
        )
    </insert>
    <update id="update">
        UPDATE tb_role SET
        name=#{name},
        remark=#{remark},
        seq=#{seq}
        WHERE id=#{id}
    </update>

    <delete id="deleteRoleResource">
        DELETE FROM tb_role_resource WHERE trole_id = #{id}
    </delete>

    <insert id="insertRoleResource">
        INSERT INTO tb_role_resource(trole_id, tresource_id)
        <foreach collection="resourceList" item="resource" separator=" union all ">
            SELECT #{id}, #{resource.id}
        </foreach>
    </insert>
</mapper>